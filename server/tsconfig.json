{
    "compilerOptions": {
      "target": "es2022",             // JS version to emit
      "module": "commonjs",           // Node.js compatible
      "lib": ["es2022"],              // Include modern JS features
      "outDir": "dist",               // Where compiled JS goes
      "rootDir": "src",               // Source TS folder
      "strict": true,                 // Enable strict type checks
      "esModuleInterop": true,        // Allow import of CommonJS modules
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  